<!DOCTYPE html>
<html>
<head>
	<title><%= $title %></title>
	<meta charset="utf-8">
	%= stylesheet '/display.css'
	%= javascript '/jquery-2.1.1.min.js'
</head>
<body style="color: #<%= join(q{}, map { sprintf('%02x', $_) } @{$color} ) %>;
    font-size: <%= $scale * 100 %>%;">

<div class="outer">
% for my $d (@{$departures}) {
<div class="row">
<div class="line"> <%= $d->[0] %> </div>
<div class="dest"> <%= $d->[1] %> </div>
<div class="time"> <%= $d->[2] %> </div>
</div> <!-- row -->
% }
</div> <!-- outer -->

</body>
</html>
